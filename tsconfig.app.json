{
    "extends":"./tsconfig.base.json",
    "compilerOptions": {
        "module": "ESNext",
        "outDir": "./out/app",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*.html": ["./out/app/pages/*/index.js"]
        },
        "esModuleInterop": true,  // Ensures compatibility with default imports
        "skipLibCheck": true,  // Skip checking of declaration files (helpful for ignoring some errors)
        "resolveJsonModule": true
    },
    "include": ["src/app/**/*"]
}